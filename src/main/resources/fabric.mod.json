{
    "schemaVersion": 1,
    "id": "exhud",
    "version": "${version}",
    "name": "Ex HUD: Directors Cut",
    "description": "Standalone mod bringing back the old PlayerEx HUD.",
    "authors": [
        "bibireden",
        "Bare Minimum Studios (B.M.S)",
        "CleverNucleus"
    ],
    "contact": {
        "homepage": "https://github.com/PlayerEXDirectorsCut/playerex",
        "sources": "https://github.com/PlayerEXDirectorsCut/ex-hud"
    },
    "license": "MIT",
    "icon": "assets/exhud/icon.png",
    "environment": "client",
    "entrypoints": {
        "client": [
            "com.bibireden.exhud.ExHUD"
        ],
        "modmenu": [
            "com.bibireden.exhud.config.ModMenuCompat"
        ],
        "appleskin": [
            "com.bibireden.exhud.compat.appleskin.AppleSkinEventHandler"
        ]
    },
    "mixins": [
        "exhud.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.14.21",
        "minecraft": "1.20.1",
        "fabric-api": ">=0.83.0",
        "java": ">=17"
    }
}